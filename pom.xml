<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <parent>
    <groupId>org.openengsb.domain</groupId>
    <artifactId>openengsb-domain-parent</artifactId>
    <version>1.3.0-SNAPSHOT</version>
  </parent>

  <properties>
    <bundle.symbolicName>org.openengsb.domain.report</bundle.symbolicName>
    <bundle.namespace>org.openengsb.domain.report</bundle.namespace>
  </properties>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.openengsb.domain</groupId>
  <artifactId>openengsb-domain-report</artifactId>
  <version>2.0.0-SNAPSHOT</version>

  <name>OpenEngSB :: Domain :: Report</name>

  <packaging>bundle</packaging>

  <description>
    Report Domain supports basic report generation, like event logging and manual report building
    and provides basic report management features, like persistent storage of reports and a category system
    for report storage.
  </description>

  <url>http://www.openengsb.org</url>

  <licenses>
    <license>
      <name>Apache 2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git://github.com/openengsb/openengsb-domain-report.git</connection>
    <developerConnection>scm:git:git@github.com:openengsb/openengsb-domain-report.git</developerConnection>
    <url>http://github.com/openengsb/openengsb-domain-report</url>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.openengsb.core</groupId>
      <artifactId>openengsb-core-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.openengsb.core</groupId>
      <artifactId>openengsb-core-common</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.openengsb.core</groupId>
      <artifactId>openengsb-core-test</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>

